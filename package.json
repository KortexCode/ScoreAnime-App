{
  "name": "scoreanime-app",
  "version": "1.0.0",
  "description": "Proyecto de aprendizaje el cual es un sitio web que muestra los animes en tendencia y sus puntuaciones. El objetivo de este taller es aplicar todas las optimizaciones necesarias hasta alcancar el mejor rendimiento posible del sito web.",
  "scripts": {
    "start": "webpack server --config webpack.config.dev.js",
    "dev": "npm run start --watch",
    "build": "node ./export.js && webpack --config webpack.config.js",
    "serve": "serve ./dist",
    "analyze": "npm run start -- --analyze",
    "ssr": "node ./serve.js",
    "ssg":"node ./export.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@babel/plugin-transform-runtime": "^7.22.7",
    "@babel/preset-env": "^7.22.7",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "date-fns": "^2.30.0",
    "gh-pages": "^5.0.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "hyperscript": "^2.0.2",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.7.6",
    "modal-video": "^2.4.8",
    "prettier": "^3.0.0",
    "pretty-quick": "^3.1.3",
    "serve": "^14.2.0",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.88.1",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "dependencies": {
    "isomorphic-unfetch": "^4.0.2"
  }
}
